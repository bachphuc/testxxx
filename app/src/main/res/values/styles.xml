<resources>

    <style name="AppTheme" parent="BaseTheme">

    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
	
	<style name="MainLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MainCardView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="LeftButtonBaseStyle">
        <item name="android:textColor">@color/black_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RightButtonBaseStyle" parent="@style/LeftButtonBaseStyle">
        <item name="android:textColor">@color/orange_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MyCardPhoto" parent="CardPhoto">

        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/bigger_title_size</item>

        <item name="android:gravity">bottom|left</item>
        <item name="android:paddingLeft">@dimen/big_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
    </style>

    <style name="CardDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primary_tab_border_color</item>
        <item name="tabIndicatorHeight">@dimen/primary_tab_height</item>
    </style>

    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
